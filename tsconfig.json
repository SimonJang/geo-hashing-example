{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "declaration": false,
        "removeComments": true,
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
